<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:id="@+id/attendanceCard">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Today - "
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todayTextView" />
        <TextView
            android:text="09-10-2016"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/todayTextView"
            android:id="@+id/todayDate" />
        <TextView
            android:text="shift-A"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/shiftTextView" />

        <TextView
            android:text="Roaster timein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shiftTextView"
            android:layout_toLeftOf="@+id/shiftTextView"
            android:id="@+id/checkinText" />

        <TextView
            android:text="Roaster timeout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shiftTextView"
            android:layout_toRightOf="@+id/shiftTextView"
            android:id="@+id/checkoutText" />

        <Button
            android:text="checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkinText"
            android:layout_alignStart="@+id/checkinText"
            android:layout_alignLeft="@+id/checkinText"
            android:id="@+id/checkinButton" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkinButton"
            android:layout_alignBottom="@+id/checkinText"
            android:text="checkinTime"
            />

        <Button
            android:text="checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/checkinButton"
            android:layout_alignStart="@+id/checkoutText"
            android:layout_alignLeft="@+id/checkinText"
            android:id="@+id/checkoutButton" />

    </RelativeLayout>


</android.support.v7.widget.CardView>